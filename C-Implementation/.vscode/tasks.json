{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "AS6 C Implementation",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-pedantic",
                "-Wall",
                "-Wextra",
                "-Werror",
                "-g",
                "main.c",
                "myUtils.c",
                "sha256.c",
                "-o",
                "main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}